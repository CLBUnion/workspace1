package com.cioclass.controller.or;

import java.util.List;

import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;

import com.cioclass.domain.or.QrcodeBuilder4XSEntity;
import com.cioclass.domain.or.QrcodeBuilder4XSVo;
import com.cioclass.service.or.QrcodeBuilder4XSService;
import com.cioclass.util.RController;
import com.google.common.collect.Lists;

@Controller
@RequestMapping("/or/qr")
public class QrcodeBuilder4XSController {
	private final static org.slf4j.Logger LOG = LoggerFactory.getLogger(QrcodeBuilder4XSController.class);
	@Autowired
	private QrcodeBuilder4XSService qrcodeBuilder4XSService;
	
	@ResponseBody
    @PostMapping("add")
    public String add(QrcodeBuilder4XSEntity e) {
        RController<QrcodeBuilder4XSEntity> r = new RController<>();
        QrcodeBuilder4XSEntity e_r = qrcodeBuilder4XSService.save(e);
        LOG.info("保存信息："+e_r);
        return r.getOne(e_r);
    }
	
	
	@ResponseBody
    @PostMapping("addQr")
    public String add(QrcodeBuilder4XSVo vo) {
        RController<QrcodeBuilder4XSEntity> r = new RController<>();
        List<QrcodeBuilder4XSEntity> e_r = Lists.newArrayList();
        e_r = qrcodeBuilder4XSService.createContent(vo);
        LOG.info("保存信息："+e_r);
        return r.getList(e_r);
    }
}
