package com.cioclass.service.or;

import com.cioclass.domain.or.ORTraceType;

/**
 * 追溯类别服务接口
 */
public interface OrTraceTypeService {
	/**
	 * 根据追溯类别Id查找追溯类别的详细信息
	 * 
	 * @param id
	 *            追溯类别Id
	 * @return 追溯类别的详细信息
	 */
	ORTraceType findById(Integer id);

	/**
	 * 根据主键id进行删除追溯类别信息
	 * 
	 * @param id
	 *            追溯类别主键id
	 */
	void deleteById(Integer id);

	/**
	 * 判断主键Id的记录是否存在
	 * 
	 * @param id
	 *            追溯类别主键Id
	 * @return 如果存在主键的值为Id的值返回true，否则返回false
	 */
	boolean exists(Integer id);
}
