package com.cioclass.util;

/**
 * 
 * @author lb_chen
 */
public interface GlobalConstant {
	
	/**
	 * envi如果为true，代表测试环境，否则为生产环境(真实环境)
	 */
	static boolean ENVI = false;
	
	/**
	 * 日期格式
	 */
	static String DATE_FORMAT = "ONLY_NUMBER";
	/**
	 * 数据库名称
	 */
	static String DATABASE = "spring_data";
	/**
	 * 登录方式
	 */
	static String LOGIN_NAME = "name";
	static String LOGIN_EMAIL = "email";
	static String LOGIN_PHONE = "phone";
	
	
	/*redis配置开始*/
	/**
	 * USE_REDIS 如果为true,代表要使用redis缓存,否则不使用缓存
	 */
	static boolean USE_REDIS = true;
	/**
	 * REDIS_SERVER redis服务器IP或者域名
	 */
	static String REDIS_SERVER = "127.0.0.1";
	/**
	 * REDIS_PORT redis服务器开放的redis服务端口
	 */
	static int REDIS_PORT = 6379;
	/**
	 * 测试携带
	 */
	static boolean REDIS_TEST_ON_BORROW = true;
	/**
	 * 测试返回
	 */
	static boolean REDIS_TEST_ON_RETURN = true;
	/**
	 * 最大置空连接数
	 */
	static int REDIS_MAXIDLE = 10;
	/**
	 * 最大连接数
	 */
	static int REDIS_MAX_TOTAL = 50;
	/*redis配置结束*/
	
	
	static String CANCLE_CACHE_EXCEPTION="The cache failed because the cache was not enabled!";
	
	enum ActivateStatus {
		ACTIVATION(1,"激活"),
		REVERSE_ACTIVATION(2,"待审核"),
		NOT_ACTIVE(0,"未激活");
		private int code;
		private String message;
		ActivateStatus(int code,String message){
			this.code = code;
			this.message = message;
		}
		public int getCode() {
			return code;
		}
		public String getMessage() {
			return message;
		}
	}
}
